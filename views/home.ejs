<link rel="stylesheet" href="/css/home.css">



<div class="home-container">
  <h1>Upload CSV File</h1>
  <form action="/file/uploads" method="POST" enctype="multipart/form-data">
    <input type="file" id="file-upload" name="csv" class="inputfile" required>
    <label for="file-upload" class="custom-file-upload"><i class="fa fa-upload" aria-hidden="true"></i><span>Choose a
        CSV file...</span></label>
    <button type="submit">Upload</button>

  </form>


  <% for(let i=0; i < files.length; i++) { %>
    <div class="uploaded-files">
      <ul>
        <span>
          <i class="fa-solid fa-file-csv"></i>
          <a href="/view/<%= files[i]._id %>">
            <%= files[i].name %>
          </a>
        </span>
        <a href="/delete/<%= files[i]._id %>"><i class="fa-solid fa-delete-left"></i></a>
      </ul>
    </div>

    <% } %>

</div>
<script src="/js/showName.js"></script>